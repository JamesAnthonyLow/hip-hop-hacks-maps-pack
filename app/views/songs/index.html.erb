<h2>Hip Hop Mapper</h2>

<div id="search-form-container">
	<%= form_tag do %>
		Choose your song: <input type="text" name="song-query">
		<input type="submit" value="Find Songs!">
	<% end %>
</div>

<% if @query_results %>
	<ul id="query-results-list">
		<% @query_results.each do |result|%>
			<li class="query-result"><a href="<%=result.children[1].attributes['href'].value%>"><%= result.content.delete("\n")%></a></li>
		<% end %>
	</ul>
<% end %>